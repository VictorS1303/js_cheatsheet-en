---
const currentPage = new URL(Astro.request.url).pathname
---

<i class="fas fa-bars btn mobile-menu-toggle-btn" id="mobile_menu_toggle_btn"></i>

<nav class="main-nav" id="main_nav">
    <a href="/index/" class="logo-link">
        <h1 class="logo">
            <span>JS</span> Cheat Sheets
        </h1>
    </a>
    <ul>
        <li>
            <a href="/first_semester/" class={currentPage === '/first_semester/' ? 'active' : ''}>1<small>st</small> semester</a>
        </li>
        <li>
            <a href="/second_semester/" class={currentPage === '/second_semester/' ? 'active' : ''}>2<small>nd</small> semester</a>
        </li>
      
    </ul>
</nav>

<style>
 

    .mobile-menu-toggle-btn
    {
        position: absolute;
        top: 20px;
        right: 20px;
        color: #fff;
        font-size: 25px;
        cursor: pointer;
        z-index: 50;
        transition: color .15s ease-in, right .4s ease-in;
    }

    .mobile-menu-toggle-btn.active
    {
        right: 220px;
        transition: right .4s ease-in;
    }

    .mobile-menu-toggle-btn:hover
    {
        color: #ff0;
        transition: color .15s ease-in;
    }

    nav
    {
        position: absolute;
        right: -250px;
        height: 100dvh;
        background-color: var(--mobile-header-background-color);
        width: 200px;
        display: grid;
        place-content: center;
        text-align: center;
        z-index: 1000;
        transition: right .5s ease-in;
    }

    nav.active
    {
        right: 0;
        transition: right .5s ease-in;
    }

    nav h1
    {  
       position: absolute;    
       bottom: 20px;
       left: 50%;
       transform: translateX(-50%);
    }

   
   nav h1 span
   {
       color: #ff0;
   }

   nav ul
   {
       font-size: 21px;
   }

   nav ul li
   {
      margin-bottom: 20px;
   }

   nav ul li a
   {
        position: relative;
        font-family: 'Noto Sans', sans-serif;
        position: relative;
        color: #fff;
   }

   nav ul li a.active
   {
        border-bottom: 2px solid #ff0;
   }

   nav ul li a::before
   {
        content: '';
        position: absolute;
        bottom: -2px;
        border-bottom: 2px solid #ff0;
        width: 0;
        transition: width .2s ease-in;
   }


   nav ul li a:hover:not(.active)::before
   {
        width: 100%;
        transition: width .2s ease-in;
   }

   @media screen and (min-width: 768px)
   {
        i
        {
            display: none;
        }
        nav
        {
            position: relative;
            right: auto;
            height: 70px;
            background-color: transparent;
            width: 100dvw;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 50;

            padding: 50px;
        }

        nav h1
        {
            position: static;
            font-size: 30px;
            transform: none;
        }

        nav ul
        {
            display: flex;
            gap: 15px;
            align-items: center;
            justify-content: center;
            height: 100%;
            margin-top: 20px;
        }

        nav ul li
        {
            margin-left: 20px;
        }
       
    }
</style>

<script>
    const mobileMenuToggleBtn = document.querySelector('#mobile_menu_toggle_btn')
    const mainNav = document.querySelector('#main_nav')

    mobileMenuToggleBtn.addEventListener('click', toggleMobileMenu)

    function toggleMobileMenu()
    {
        mobileMenuToggleBtn.classList.toggle('active')
        mainNav.classList.toggle('active')

        updateMobileMenuToggleIcon()
    }

    function updateMobileMenuToggleIcon()
    {
        if(mobileMenuToggleBtn.classList.contains('fa-bars'))
        {
            mobileMenuToggleBtn.classList.remove('fa-bars')
            mobileMenuToggleBtn.classList.add('fa-times')
        }
        else
        {
            mobileMenuToggleBtn.classList.add('fa-bars')
            mobileMenuToggleBtn.classList.remove('fa-times')
        }
    }
</script>